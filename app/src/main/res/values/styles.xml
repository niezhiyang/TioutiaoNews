<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string"/>
        <attr name="ctvText_size" format="dimension"/>
        <attr name="ctvText_origin_color" format="color"/>
        <attr name="ctvText_change_color" format="color"/>
        <attr name="ctvProgress" format="float"/>
        <attr name="ctvDirection" format="integer"/>
    </declare-styleable>
    <declare-styleable name="HtmlTextView">
        <attr name="loadingImg" format="reference"/>
        <attr name="errorImg" format="reference"/>
        <attr name="defaultWidth" format="reference"/>
        <attr name="defaultHeight" format="reference"/>
    </declare-styleable>
    <attr name="clickableBackground" format="reference"/>
    <attr name="main_bg" format="reference|color"/>
    <attr name="white_bg" format="reference|color"/>
    <attr name="font_color" format="reference|color"/>
    <attr name="font_color2" format="reference|color"/>
    <attr name="font_red" format="reference|color"/>
    <attr name="isColorUi" format="boolean"/>
    <attr name="divider_black" format="reference|color"/>
    <attr name="divider_light_grey" format="reference|color"/>
    <style name="TextAppearanceBig" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="new_info_layout_text_style">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">@color/ssxinzi2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>
    <style name="new_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/new_title</item>
    </style>
    <dimen name="new_title">16.0dip</dimen>
</resources>
